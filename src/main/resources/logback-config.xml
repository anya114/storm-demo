<?xml version="1.0" encoding="UTF-8"?>
<configuration>

	<appender name="FILE" class="ch.qos.logback.core.FileAppender">
		<file>./storm-task.log</file>
		<encoder>
			<pattern>%date %level %logger{10} %msg%n
			</pattern>
		</encoder>
	</appender>

	<logger name="hu.sm.nvent.task.storm" level="info"/>
	
	<root level="info">
		<appender-ref ref="FILE" />
	</root>

</configuration>
